      %th Color
      %th Material
      %th Price
      %th Discount
      %th Quantity
      %th
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.description
        %td= product.color
        %td= product.material
        %td= product.price
        %td= product.discount
        %td= product.quantity
