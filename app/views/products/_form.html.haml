= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
    .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :material
    = f.text_field :material
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :discount
    = f.number_field :discount
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
